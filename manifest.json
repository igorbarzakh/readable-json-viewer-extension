{
  "manifest_version": 3,
  "name": "Readable JSON Viewer",
  "version": "1.0.0",
  "description": "Formats .json pages into a readable, collapsible tree view.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
        "file:///*"
      ],
      "js": ["src/content-script.js"],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    }
  ]
}
